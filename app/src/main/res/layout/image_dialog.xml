<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_ly"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_image_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="full size thumbnail"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_launcher_background" />

    <ImageButton
        android:id="@+id/image_button_facebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_facebook" />

    <ImageButton
        android:id="@+id/image_button_twitter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:cropToPadding="false"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@+id/image_button_facebook"
        app:layout_constraintTop_toTopOf="@+id/image_button_facebook"
        app:srcCompat="@drawable/ic_twitter" />

</androidx.constraintlayout.widget.ConstraintLayout>